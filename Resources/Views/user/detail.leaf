<!DOCTYPE html>
<html>
  #embed("Includes/head")
  <body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
      #embed("Includes/navbar")
      <main class="mdl-layout__content">
        <div class="page-content">
          <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand">
              <h2 class="mdl-card__title-text">#(user.firstName) #(user.lastName)</h2>
            </div>
            <div class="mdl-card__supporting-text">
              user id: #(user.id)<br>
              telephone: #(user.telephone)<br>
              email: #(user.email)
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <a href="edit/#(user.id)" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                <i class="material-icons">create</i>  Edit User
              </a>
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <a href="/user/all" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                <i class="material-icons">list</i>  View Users
              </a>
            </div>
            <div class="mdl-card__menu">
              <a href="delete/#(user.id)" id="du" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                <i class="material-icons">delete</i>
              </a>
              <span for="du" class="mdl-tooltip">Delete User</span>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
